<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialog_constrain_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
>

    <FrameLayout
            android:id="@+id/dialog_frame_layout"
            android:layout_width="200dp"
            android:layout_height="200dp"
    >
        <ImageView
                android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/dialog_image"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="293dp" android:adjustViewBounds="true"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_progress_bar"
                android:layout_gravity="center_horizontal|center_vertical"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/dialog_edit_text" android:layout_gravity="bottom|center_horizontal"
                android:minHeight="48dp" android:layout_marginTop="8dp"
                android:selectAllOnFocus="true"
                android:visibility="invisible"

                android:textSize="12dp" android:textAlignment="center" android:textColor="#3C3C3C"/>
    </FrameLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingStart="5dp" android:paddingLeft="5dp"
                    android:paddingTop="5dp" android:paddingEnd="5dp" android:paddingRight="5dp"
                    android:paddingBottom="5dp" android:visibility="invisible" android:id="@+id/dialog_info_layout"
                    android:layout_marginTop="8dp" android:layout_marginLeft="8dp">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/dialog_info_type"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/dialog_info_size"
                        android:visibility="gone"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/dialog_info_description"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
