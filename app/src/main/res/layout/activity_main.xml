<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputLink"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:hint="@string/pd_input_hint" tools:text="@string/pd_input_hint"
            android:textStyle="italic" android:minHeight="48dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="67dp"/>
    <Button
            android:text="@string/pd_download"
            android:layout_width="wrap_content"
            android:layout_height="48dp" android:id="@+id/buttonDownload"
            android:textAlignment="center" app:flow_horizontalAlign="center"
            app:flow_verticalAlign="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="67dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/logo_official" android:id="@+id/ic_pinterest"
            android:layout_marginEnd="16dp"
            android:tooltipText="Open Pinterest"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/ic_folder" android:id="@+id/ic_folder"
            app:layout_constraintStart_toStartOf="parent"
            android:tooltipText="Open Folder"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"

            android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>